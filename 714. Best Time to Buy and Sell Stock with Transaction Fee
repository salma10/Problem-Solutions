public class Solution {
    public int MaxProfit(int[] prices, int fee) {
        if(prices.Length < 2) 
            return 0;
        
        int max_pro = 0;
        int min = prices[0];
        
        for(int i = 1; i < prices.Length; i++)
        {
            if(prices[i] < min)
                min = prices[i];
            else
            {
                if(prices[i] > min + fee)
                {
                    max_pro += prices[i] - min - fee;
                    min = prices[i] - fee;
                }                  
            }
        }     
        return max_pro;
    }
}
